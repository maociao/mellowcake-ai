[Unit]
Description=Hindsight Memory Service
After=network.target

[Service]
Type=simple
User=%USER%
WorkingDirectory=%PROJECT_ROOT%/hindsight_service/hindsight-api
EnvironmentFile=-%PROJECT_ROOT%/.env.local
Environment=PORT=8888

ExecStart=%PROJECT_ROOT%/hindsight_service/hindsight-api/venv/bin/python -m hindsight_api.main --port 8888 --host 0.0.0.0
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
